@model Coupon

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Coupon</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Code)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Code)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DiscountAmount)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DiscountAmount)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ExpirationDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ExpirationDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CreatedAt)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CreatedAt)
        </dd>
        <dt class="col-sm-2">
            Created By
        </dt>
        <dd class="col-sm-10">
            @Model.CreatedBy?.UserName
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LastModifiedAt)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LastModifiedAt)
        </dd>
        <dt class="col-sm-2">
            Last modified By
        </dt>
        <dd class="col-sm-10">
            @Model.LastModifiedBy?.UserName
        </dd>
    </dl>
</div>
<div>
    <h4>Packages</h4>
    <hr />
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Start Date</th>
                <th>Duration</th>
                <th>Budget</th>
                <th>Transport Option</th>
                <th>Transport Company</th>
                <th>Category</th>

            </tr>
        </thead>
        <tbody>
            @if (Model.Packages != null && Model.Packages.Any())
            {
                foreach (var package in Model.Packages)
                {
                    <tr>
                        <td>@package.Name</td>
                        <td>@package.StartDate</td>
                        <td>@package.Duration</td>
                        <td>@package.Budget</td>
                        <td>@package.TransportOption</td>
                        <td>@package.TransportCompany</td>
                        <td>@package.Category</td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="3">No Packages available for this coupon.</td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
